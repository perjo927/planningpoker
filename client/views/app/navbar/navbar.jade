template(name="navbar")
   .container
      .nav-wrapper
         a(href="/").brand-logo Plansson
         a.button-collapse(href='#', data-activates='mobile-nav')
            i.mdi-navigation-menu
         // .hide-on-med-and-down
         ul#nav-upper.right
            //+nav_items
            if currentUser
               a(href="#")
                  +account

         ul#mobile-nav.side-nav.cyan
            +nav_items_side

template(name="nav_items")
   li
      a(href='/') Home

template(name="nav_items_side")
   +nav_items

template(name="account")
   ul#account-dropdown.dropdown-content
      li
         a(href='#!') Profile
      li.divider
      li
         a#sign-out Sign Out

   // Dropdown Trigger
   li
      a.dropdown-button(href='#!', data-activates='account-dropdown')
         i.mdi-action-settings

